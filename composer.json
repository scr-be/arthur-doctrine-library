{
    "name"        : "scr-be/arthur-doctrine-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://scr.be/arthur-doctrine-library",
    "description" : "Simple library providing a foundation for our Doctrine work, including base entity classes and ORM-specific exceptions.",
    "support" : {
        "email"  : "rmf@scr.be",
        "issues" : "https://arthur-doctrine-library.oss.scr.be/issues",
        "source" : "https://arthur-doctrine-library.oss.scr.be/git",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"   : [
        "arthur-doctrine-library", "scribe-arthur-doctrine-library", "doctrine", "library", "scr.be", "scribe", "scribenet", "scribe-software", "scribe-systems"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@scr.be",
            "homepage": "https://scr.be/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php"                  : ">=5.6.4,~5.6|~7.0",
        "scr-be/wonka-library" : "~0.1@dev",
        "doctrine/orm"         : "~2.5"
    },
    "require-dev" : {
        "phpunit/phpunit"             : "~5.0",
        "sensiolabs/security-checker" : "~3.0",
        "scrutinizer/ocular"          : "~1.1",
        "satooshi/php-coveralls"      : "~0.7@dev"
    },
    "autoload" : {
        "psr-4" : {
            "Scribe\\Doctrine\\Exception\\"    : "lib/Exception/",
            "Scribe\\Doctrine\\ORM\\Mapping\\" : "lib/ORM/Mapping/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Scribe\\Doctrine\\Tests\\" : "tests/"
        }
    },
    "config": {
        "bin-dir"           : "bin",
        "minimum-stability" : "dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "0.1-dev"
        }
    }
}
