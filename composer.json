{
    "name"        : "src-run/arthur-doctrine-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://src.run/arthur-doctrine-library",
    "description" : "foundational Doctrine-ORM classes",
    "support" : {
        "email"  : "rmf@src.run",
        "issues" : "https://src.run/arthur-doctrine-library/issues",
        "source" : "https://src.run/arthur-doctrine-library/git"
    },
    "keywords"   : [
        "arthur-doctrine-library", "arthur", "doctrine", "library", "src.run", "rmf"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@src.run",
            "homepage": "https://src.run/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php"                                       : "^5.6||^7.0",
        "src-run/arthur-doctrine-identity-library"  : "^0.6",
        "src-run/arthur-doctrine-exception-library" : "^0.6",
        "doctrine/orm"                              : "^2.5"
    },
    "require-dev" : {
        "phpunit/phpunit"        : "^5.0",
        "codacy/coverage"        : "^1.0",
        "satooshi/php-coveralls" : "^1.0"
    },
    "autoload" : {
        "psr-4" : {
            "SR\\Doctrine\\ORM\\Manager\\"    : "lib/Manager/",
            "SR\\Doctrine\\ORM\\Repository\\" : "lib/Repository/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "SR\\Doctrine\\ORM\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "bin-dir" : "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "0.6-dev"
        }
    }
}
