{
    "name"        : "scr-be/arthur-doctrine-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://scr.be/arthur-doctrine-library",
    "description" : "A foundational library with Doctrine-ORM oriented base classes, such as 'Entity' implementations through abstract 'IdEntity', 'SlugEntity', and 'UuidEntity' classes.",
    "support" : {
        "email"  : "rmf@scr.be",
        "issues" : "https://arthur-doctrine-library.oss.scr.be/issues",
        "source" : "https://arthur-doctrine-library.oss.scr.be/git",
        "irc"    : "irc://irc.efnet.org/scribe"
    },
    "keywords"   : [
        "arthur-doctrine-library", "scribe-arthur-doctrine-library", "doctrine", "library", "scr.be", "scribe", "scribenet", "scribe-software", "scribe-systems"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@scr.be",
            "homepage": "https://scr.be/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php"                                  : ">=5.6.4,~5.6|~7.0",
        "scr-be/wonka-library"                 : "~0.5",
        "scr-be/augustus-primitive-library"    : "~0.3",
        "scr-be/arthur-doctrine-utils-library" : "~0.1",
        "doctrine/orm"                         : "~2.5"
    },
    "require-dev" : {
        "phpunit/phpunit"        : "~5.0",
        "codacy/coverage"        : "~1.0",
        "satooshi/php-coveralls" : "~1.0"
    },
    "autoload" : {
        "psr-4" : {
            "Scribe\\Doctrine\\ORM\\Mapping\\"    : "lib/Mapping/",
            "Scribe\\Doctrine\\ORM\\Manager\\"    : "lib/Manager/",
            "Scribe\\Doctrine\\ORM\\Repository\\" : "lib/Repository/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Scribe\\Doctrine\\Tests\\ORM\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "bin-dir" : "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "0.5-dev"
        }
    }
}
